{
    "manifest_version": 2,
    "name": "JavaScript Switch",
    "version": "1.0.0",
    "description": "Developers and users can switch JavaScript ON/OFF to block vulnerable JavaScript programs and test accessibility of the website",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png"
    },
    "minimum_chrome_version": "16",
    "homepage_url": "https://manikandan-ramar.github.io/javascript-switch",
    "permissions": [
        "tabs",
        "contentSettings"
    ],
    "background": {
        "scripts": [
            "js/main.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon"	: "icons/icon-enabled.png"
    }

}